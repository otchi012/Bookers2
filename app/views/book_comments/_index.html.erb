<% book.book_comments.each do |book_comment| %>
  <tr >
    <td>
      <%= link_to user_path(book_comment.user.id) do %>
        <%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
        <%= book_comment.user.name %>
      <% end %>
    </td>
    <td>
      <%= book_comment.comment %>
    </td>
    <% if book_comment.user == current_user %>
      <td>
        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, "data-confirm" =>"本当に消しますか？", class:"btn-sm btn-danger" %>
      </td>
    <% end %>
  </tr>
<% end %>