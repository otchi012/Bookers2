<div class="container">
  <p class="notice">
    <%= notice %>
  </p>
  <%if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h2>User info</h2>
  <div class="edit-user">
    <%= form_with model:@user, local:true do |f| %>
      <div class="field">
        <label>Name</label>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <label>Image</label>
        <%= f.attachment_field :profile_image %>
      </div>
      <div class="field">
        <label>Introduction</label>
        <%= f.text_area :introduction %>
      </div>
      <div class="action">
        <%= f.submit "Update User" %>
      </div>

    <% end %>
  </div>
</div>

