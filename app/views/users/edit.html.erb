<h2>Log in</h2>
<div class="">
  <%= form_with model:@user, local:true do |f| %>>
    <div class="">
      <label class="">Name</label>
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div class="">
      <label class="">Image</label>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>
    <div class="">
      <label class="">Introduction</label>
      <%= f.text_area :introfuction autofocus: true %>
    </div>
    <%= f.submit "Update User" class:"btn btn-lg btn-block btn-base-1 mt-20" %>
  <% end %>
</div>