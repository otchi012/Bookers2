<div class="">
  <h2>User info</h2>
  <img class="attachment user profile_image fallback" src="/assets/no_image-ede28af4bad96368ef41be1b4be1cffce0d9402540f75d17895e32cb0d2af5e6.jpg" alt="No image">
  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th></th>
      </tr>
    </tbody>
  </table>
  <div class="">
    <a class="btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></a>
  </div>
  <%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <h2>New book</h2>
    <div class="">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="">
      <label>Opinion</label>
      <%= f.text_area :body %>
    </div>
    <div class="">
      <%= f.submit "Create Book", class:"btn btn-default" %>
    </div>
  <% end %>
</div>
