<div class="">
  <h2>Books</h2>
  <table class="">
    <% @books.each do |book| %>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(book.id) %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %></td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>